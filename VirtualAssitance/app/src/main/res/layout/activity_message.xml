<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nsrijan.virtualassitance.MessageActivity">


    <android.support.v7.widget.CardView
        android:background="#9E9E9E"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:background="@drawable/c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/speak"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:text="Speak!!"
                android:textSize="30dp"
                android:textColor="#FAFAFA"
                android:textStyle="bold"
                android:paddingLeft="15dp"/>
            <TextView
                android:id="@+id/send"
                android:layout_below="@+id/speak"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="Send message to:"
                android:textSize="30dp"
                android:textColor="#03A9F4"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@+id/send"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="#03A9F4"
                android:textSize="25dp"
                android:paddingLeft="15dp"
                android:id="@+id/textView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_alignTop="@+id/textView"
                android:layout_marginLeft="68dp"
                android:layout_marginStart="68dp"
                android:layout_toEndOf="@+id/textView"
                android:layout_toRightOf="@+id/textView"
                android:text="Message"
                android:textColor="#03A9F4"/>

            <EditText
                android:id="@+id/to"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:hint="To:"
                android:textColorHint="#fff"
                android:padding="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:background="@drawable/editstyle"
                android:layout_below="@+id/textView"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/to"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:id="@+id/field"
                android:hint="Field text"
                android:layout_marginRight="10dp"
                android:textColorHint="#fff"
                android:textStyle="bold"
                android:textSize="25dp"
                android:background="@drawable/editstyle"
                android:padding="15dp"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/field"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/microphone"
                android:id="@+id/imageView" />
            <Button
                android:id="@+id/alert"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="alert"
                android:background="@drawable/editbutton"
                android:textColor="#000000"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignLeft="@+id/field"
                android:layout_alignStart="@+id/field" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>
